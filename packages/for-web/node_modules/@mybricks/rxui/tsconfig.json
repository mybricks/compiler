{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "dom",
      "es2016",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": false,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noImplicitAny": false,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@mybricks/rxui": [
        "types.d.ts"
      ]
    },
    "types": [
      "jest","es6-promise"
    ],
    "typeRoots": [
      "../node_modules/@types"
    ]
  },
  "exclude": [
    "./node_modules"
  ]
}
